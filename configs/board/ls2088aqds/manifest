# [general]
machine=ls2088aqds

# [firmware_images]
rcw_nor=build/firmware/rcw/ls2088aqds/FFFFFFFF_NNNSNP_HH_0x2a_0x49/rcw_2000.bin
rcw_sd=build/firmware/rcw/ls2088aqds/FFFFFFFF_NNNSNP_HH_0x2a_0x49/rcw_2000_sd.bin
atf_bl2_sd=build/firmware/atf/ls2088aqds/bl2_sd.pbl
atf_bl2_sd_sec=build/firmware/atf/ls2088aqds/bl2_sd_sec.pbl
atf_bl2_nor=build/firmware/atf/ls2088aqds/bl2_nor.pbl
atf_bl2_nor_sec=build/firmware/atf/ls2088aqds/bl2_nor_sec.pbl
atf_fip_uboot=build/firmware/atf/ls2088aqds/fip_uboot.bin
secureboot_headers_nor=build/firmware/secboot_hdrs/ls2088aqds/secboot_hdrs_norboot.bin
secureboot_headers_sd=build/firmware/secboot_hdrs/ls2088aqds/secboot_hdrs_sdboot.bin
phy_firmware=build/firmware/phy_cortina/cs4315-cs4340-PHY-ucode.txt
dpaa2_mc_fw=build/firmware/mc_bin/ls2088a/mc*.itb
dpaa2_mc_dpc=build/firmware/mc_utils/config/ls2088a/QDS/dpc.0x2A_0x49.dtb
dpaa2_mc_dpl=build/firmware/mc_utils/config/ls2088a/QDS/dpl-eth.0x2A_0x49.dtb

# [linux, dtb, rfs]
kernel_img=build/linux/kernel/arm64/LS/Image
device_tree=build/linux/kernel/arm64/LS/fsl-ls2088a-qds.dtb
initrdrfs=packages/rfs/initrd/rootfs_yocto_arm64_tiny.cpio.gz
kernelrfs_continuous=y


# [distro autoboot script]
distro_bootscript=build/firmware/u-boot/ls2088aqds/ls2088aqds_boot.scr
bootscript_dec=build/firmware/u-boot/ls2088aqds/ls2088aqds_dec_boot.scr
bootscript_enforce=build/firmware/u-boot/ls2088aqds/ls2088aqds_enforce_boot.scr

securevalidate="setenv secureboot_validate 'load \$devtype \$devnum:\$devpart_boot \$kernelheader_addr_r /secboot_hdrs/ls2088aqds/hdr_linux.out; load \$devtype \$devnum:\$devpart_boot \$fdtheader_addr_r /secboot_hdrs/ls2088aqds/hdr_dtb.out; esbc_validate \$kernelheader_addr_r; esbc_validate \$fdtheader_addr_r'"

securevalidate_enc="setenv secureboot_validate 'load \$devtype \$devnum:\$devpart_boot \$kernelheader_addr_r /secboot_hdrs/ls2088aqds/hdr_linux.out; esbc_validate \$kernelheader_addr_r;load \$devtype \$devnum:\$devpart_boot \$fdtheader_addr_r /secboot_hdrs/ls2088aqds/hdr_dtb.out; esbc_validate \$fdtheader_addr_r; size \$devtype \$devnum:\$devpart_boot \$kernel_image; echo Encapsulating linux image;setenv key_addr 0x87000000; mw \$key_addr $key_id_1;setexpr \$key_addr \$key_addr + 0x4; mw \$key_addr $key_id_2;setexpr \$key_addr \$key_addr + 0x4; mw \$key_addr $key_id_3;setexpr \$key_addr \$key_addr + 0x4; mw \$key_addr $key_id_4;blob enc \$kernel_addr_r \$load_addr \$filesize \$key_addr; setexpr blobsize \$filesize + 0x30;echo Saving encrypted linux ;save \$devtype \$devnum:\$devpart_boot \$load_addr \$kernel_image \$blobsize;size \$devtype \$devnum:\$devpart_boot $dtb;echo Encapsulating dtb image; blob enc \$fdt_addr_r \$load_addr \$filesize \$key_addr; setexpr blobsize \$filesize + 0x30;echo Saving encrypted dtb; save \$devtype \$devnum:\$devpart_boot \$load_addr $dtb \$blobsize; size \$devtype \$devnum:\$devpart_boot /ls2088aqds_dec_boot.scr; load \$devtype \$devnum:\$devpart_boot \$load_addr /ls2088aqds_dec_boot.scr; echo replacing Bootscript; save \$devtype \$devnum:\$devpart_boot \$load_addr /ls2088aqds_boot.scr \$filesize;size \$devtype \$devnum:\$devpart_boot /secboot_hdrs/ls2088aqds/hdr_ls2088aqds_bs_dec.out; load \$devtype \$devnum:\$devpart_boot \$load_addr /secboot_hdrs/ls2088aqds/hdr_ls2088aqds_bs_dec.out ;echo Replacing bootscript header; save \$devtype \$devnum:\$devpart_boot \$load_addr /hdr_ls2088aqds_bs.out \$filesize;reset;'"

securevalidate_dec="setenv secureboot_validate 'size \$devtype \$devnum:\$devpart_boot \$kernel_image;setexpr imgsize \$filesize - 0x30 ;echo Decapsulating linux image; setenv key_addr 0x87000000; mw \$key_addr $key_id_1;setexpr \$key_addr \$key_addr + 0x4; mw \$key_addr $key_id_2;setexpr \$key_addr \$key_addr + 0x4; mw \$key_addr $key_id_3;setexpr \$key_addr \$key_addr + 0x4; mw \$key_addr $key_id_4; blob dec \$kernel_addr_r \$load_addr \$imgsize \$key_addr; cp.b \$load_addr \$kernel_addr_r \$filesize ;size \$devtype \$devnum:\$devpart_boot $dtb;setexpr imgsize \$filesize - 0x30 ;echo Decapsulating dtb kernel_image; blob dec \$fdt_addr_r \$load_addr \$imgsize \$key_addr; cp.b \$load_addr \$fdt_addr_r \$filesize ; '"

securevalidate_fix="setenv secureboot_validate 'load \$devtype \$devnum:\$devpart_boot \$kernelheader_addr_r /secboot_hdrs/ls2088aqds/hdr_linux.out; esbc_validate \$kernelheader_addr_r;load \$devtype \$devnum:\$devpart_boot \$fdtheader_addr_r /secboot_hdrs/ls2088aqds/hdr_dtb.out; esbc_validate \$fdtheader_addr_r; load \$devtype \$devnum:\$devpart_boot \$initramfsheader_addr_r /secboot_hdrs/ls2088aqds/hdr_initramfs.out; esbc_validate \$initramfsheader_addr_r; size \$devtype \$devnum:\$devpart_boot /ls2088aqds_enforce_boot.scr; load \$devtype \$devnum:\$devpart_boot \$load_addr /ls2088aqds_enforce_boot.scr; echo Replacing Bootscript; save \$devtype \$devnum:\$devpart_boot \$load_addr /ls2088aqds_boot.scr \$filesize;size \$devtype \$devnum:\$devpart_boot /secboot_hdrs/ls2088aqds/hdr_ls2088aqds_bs_enf.out; load \$devtype \$devnum:\$devpart_boot \$load_addr /secboot_hdrs/ls2088aqds/hdr_ls2088aqds_bs_enf.out ;echo Replacing bootscript header; save \$devtype \$devnum:\$devpart_boot \$load_addr /hdr_ls2088aqds_bs.out \$filesize; ' setenv othbootargs 'ima_tcb ima_appraise=fix ima_appraise_tcb evm=fix enforcing=0 '"

securevalidate_enforce="setenv secureboot_validate 'load \$devtype \$devnum:\$devpart_boot \$kernelheader_addr_r /secboot_hdrs/ls2088aqds/hdr_linux.out; esbc_validate \$kernelheader_addr_r;load \$devtype \$devnum:\$devpart_boot \$fdtheader_addr_r /secboot_hdrs/ls2088aqds/hdr_dtb.out; esbc_validate \$fdtheader_addr_r; load \$devtype \$devnum:\$devpart_boot \$initramfsheader_addr_r /secboot_hdrs/ls2088aqds/hdr_initramfs.out; esbc_validate \$initramfsheader_addr_r; ' setenv othbootargs 'ima_tcb ima_appraise=enforce ima_appraise_tcb enforcing=1 '"

distroboot=\
'env exists dtb || setenv dtb fsl-ls2088a-qds.dtb;'\
'env exists kernel_image || setenv kernel_image Image;'\
'env exists devpart_boot || setenv devpart_boot 2;'\
'env exists devpart_root || setenv devpart_root 4;'\
'part uuid $devtype $devnum:$devpart_root partuuidr;'\
'setenv bootargs console=ttyS1,115200 earlycon=uart8250,mmio,0x21c0600 root=PARTUUID=$partuuidr rw rootwait $othbootargs;'\
'load $devtype $devnum:$devpart_boot $kernel_addr_r $kernel_image;'\
'load $devtype $devnum:$devpart_boot $fdt_addr_r $dtb;'\
'env exists secureboot && echo validating secureboot && run secureboot_validate;'\
'booti $kernel_addr_r - $fdt_addr_r'

distroboot_ima=\
'env exists dtb || setenv dtb fsl-ls2088a-qds.dtb;'\
'env exists kernel_image || setenv kernel_image Image;'\
'env exists devpart_boot || setenv devpart_boot 2;'\
'env exists devpart_root || setenv devpart_root 4;'\
'part uuid $devtype $devnum:$devpart_root partuuidr;'\
'load $devtype $devnum:$devpart_boot $kernel_addr_r $kernel_image;'\
'load $devtype $devnum:$devpart_boot $fdt_addr_r $dtb;'\
'setenv initramfs_addr_r 0xb0000000; setenv initramfsheader_addr_r 0x80300000;'\
'load $devtype $devnum:$devpart_boot $initramfs_addr_r initramfs.img;'\
'env exists secureboot && echo validating secureboot && run secureboot_validate;'\
'setenv bootargs console=ttyS1,115200 earlycon=uart8250,mmio,0x21c0600 root=PARTUUID=$partuuidr rw rootwait $othbootargs;'\
'booti $kernel_addr_r $initramfs_addr_r $fdt_addr_r'

# [uefi grub config, updated by installer]
uefi_grub_search="search --no-floppy --file /partuuid_boot --set root"
uefi_grub_linux="linux  /Image  console=ttyS1,115200 earlycon=uart8250,mmio,0x21c0600 root=PARTUUID=partuuid_sys rw rootwait ramdisk_size=0x2000000 default_hugepagesz=2m hugepagesz=2m hugepages=256"


# [secure boot scripts in cst]
nor_script=scripts/platforms/ls2088_1088_nor.sh
qspi_script=scripts/platforms/ls2088_qspi.sh
